<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductivityApp.Views.EditMilestonePage"
             Title="Edit Milestone">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Title:" FontSize="Large" FontAttributes="Bold" />
        <Entry x:Name="titleEntry" Text="{Binding Label}" FontSize="Medium" />
        <Label Text="Description:" FontSize="Large" FontAttributes="Bold" />
        <Entry x:Name="descriptionEntry"  Text="{Binding Description}" FontSize="Medium" />
        <Label Text="Deadline:" FontSize="Large" FontAttributes="Bold" />
        <DatePicker x:Name="deadlineDate" Date="{Binding Deadline, Mode=TwoWay}" FontSize="Medium" />
    </StackLayout>

</ContentPage>